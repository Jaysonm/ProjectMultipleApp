{
  "build": {
    "release": {
      "android": {
        "buildType": "app-bundle"
      },
      "releaseChannel": "prod"
    },
    "beta": {
      "android": {
        "releaseChannel": "beta",
        "gradleCommand": ":app:assembleRelease",
